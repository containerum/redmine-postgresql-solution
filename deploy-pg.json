{
  "containers": [{
    "image": "{{.PG_IMAGE}}",
    "name": "{{.PG_DEPLOY_NAME}}{{.PG_DEPLOY_HASH}}",
    "limits": {
      "cpu": {{.PG_CPU}},
      "memory": {{.PG_RAM}}
    },
    "env": [{
      "name": "POSTGRES_USER",
      "value": "{{.POSTGRES_USER}}"
    },
      {
        "name": "POSTGRES_PASSWORD",
        "value": "{{.POSTGRES_PASSWORD}}"
      },
      {
        "name": "PGDATA",
        "value": "{{.PGDATA}}"
      },
      {
        "name": "SVC_NAME",
        "value": "{{.PG_SVC_NAME}}{{.PG_SVC_HASH}}"
      }
    ]
  }],
  "name": "{{.PG_DEPLOY_NAME}}{{.PG_DEPLOY_HASH}}",
  "replicas": 1
}